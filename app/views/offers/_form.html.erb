<%= form_for(offer) do |f| %>
  <% if offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :ownerID %>
    <%= f.text_field :ownerID %>
  </div>

  <div class="field">
    <%= f.label :installs %>
    <%= f.text_field :installs %>
  </div>

  <div class="field">
    <%= f.label :revenue %>
    <%= f.text_field :revenue %>
  </div>

    <div class="field select_create">
      <%= f.label :risk %><br>
        <%= f.select(:risk) do %>
        <% [['U','0'],['L','1'],['M','2'],['H','3'],['VH','4'],].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
        <% end %>
      <% end %>  </div>

    <div class="field select_create">
      <%= f.label :finalStatus %><br>
        <%= f.select(:finalStatus) do %>
        <% [['Confirmed','0'],['Hold','1'],['Reduction','2'],].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
        <% end %>
      <% end %>  </div>



  <div class="field">
    <%= f.label :comment1 %>
    <%= f.text_field :comment1 %>
  </div>

  <div class="field">
    <%= f.label :comment2 %>
    <%= f.text_field :comment2 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
